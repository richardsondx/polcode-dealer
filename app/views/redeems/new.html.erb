<h1>Get your deal!</h1>
<%= form_for([:deal, @redeem]) do |f| %>
  <%= errors(@redeem) %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', :controller => 'deals', :action => 'show', :id => :deal_id %>
